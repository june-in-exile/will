{
  "name": "circom-typescript-project",
  "version": "1.0.0",
  "description": "TypeScript testing framework for Circom circuit development",
  "scripts": {
    "test": "jest --verbose",
    "test:single": "jest --verbose --testNamePattern=",
    "lint": "npx eslint '**/*.ts'",
    "format:check": "npx prettier --check '**/*.ts'",
    "format": "npx prettier --write '**/*.ts'",
    "clean": "make clean-all"
  },
  "keywords": [
    "circom",
    "zk-snarks",
    "typescript",
    "testing"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "circom_tester": "0.0.24",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  },
  "dependencies": {
    "circomkit": "^0.3.3",
    "circomlib": "^2.0.5",
    "snarkjs": "^0.7.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "tests/**/*.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "testTimeout": 30000
  }
}
