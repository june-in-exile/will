{
  "name": "circom-typescript-project",
  "version": "1.0.0",
  "description": "TypeScript testing framework for Circom circuit development",
  "scripts": {
    "test": "pnpm exec tsx ./tests/helpers/aes-gcm.ts && jest --verbose",
    "test:simple": "jest",
    "test:single": "jest --verbose --testNamePattern=",
    "lint": "eslint '**/*.ts'",
    "format": "prettier --write '**/*.ts'",
    "clean": "make clean-all"
  },
  "keywords": [
    "circom",
    "zk-snarks",
    "typescript",
    "testing"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "circom_tester": "0.0.24",
    "eslint": "^8.57.1",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "circomkit": "^0.3.3",
    "circomlib": "^2.0.5",
    "jest": "^30.0.4",
    "snarkjs": "^0.7.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "tests/**/*.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "testTimeout": 60000,
    "globals": {
      "LOG_LEVEL": "error",
      "CIRCOM_DEFAULTS": {
        "O": 2,
        "verbose": false,
        "inspect": false,
        "json": false,
        "recompile": true,
        "prime": "bn128",
        "simplification_substitution": false,
        "no_asm": false,
        "no_init": false
      },
      "CONSTRAINT_RECORDS_PATH": "./constraintRecords.json"
    }
  }
}