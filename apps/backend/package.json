    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "tsconfig-paths": "^4.2.0"
  },
  "dependencies": {
    "@ethersproject/providers": "^5.8.0",
    "@uniswap/permit2-sdk": "^1.3.0",
    "chalk": "^5.0.0",
    "dotenv": "^16.0.0",
    "ethers": "^6.13.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.8.3"
