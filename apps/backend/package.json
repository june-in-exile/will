{
  "name": "backend",
  "type": "module",
  "ts-node": {
    "esm": true
  },
  "scripts": {
    "dev": "nodemon --exec \"ts-node --esm\" src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf dist node_modules coverage"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "supertest": "^7.0.0",
    "tsconfig-paths": "^4.2.0",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@ethersproject/providers": "^5.8.0",
    "@uniswap/permit2-sdk": "^1.3.0",
    "chalk": "^5.0.0",
    "dotenv": "^16.0.0",
    "ethers": "^6.13.0",
    "typescript": "^5.8.3"
  }
}