{
  "name": "backend",
  "private": true,
  "type": "module",
  "ts-node": {
    "esm": true
  },
  "scripts": {
    "dev": "nodemon --exec \"ts-node --esm\" src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --project tsconfig.typecheck.json",
    "clean": "rm -rf dist node_modules coverage"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsconfig-paths": "^4.2.0"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.(ts|js)",
      "**/*.(test|spec).(ts|js)"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": {
            "module": "ESNext",
            "target": "ES2022",
            "moduleResolution": "Node",
            "allowSyntheticDefaultImports": true,
            "esModuleInterop": true
          }
        }
      ]
    },
    "moduleNameMapper": {
      "^@shared/(.*)$": "<rootDir>/../../shared/$1",
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/**/*.spec.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true
  },
  "dependencies": {
    "@ethersproject/providers": "^5.8.0"
  }
}
