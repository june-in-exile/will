{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"],
      "@shared/*": ["../../shared/*"],
    }
  },
  "include": [
    "src/**/*",
    "../../shared/**/*"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
