{
  "name": "will-project",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\"",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "pnpm build:circuits && pnpm build:contracts && pnpm build:frontend && pnpm build:backend",
    "build:circuits": "cd circuits && make all",
    "build:contracts": "cd contracts && forge build && pnpm typechain",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "pnpm --filter frontend build",
    "clean": "rm -rf node_modules && pnpm clean:contract && pnpm clean:circuits && pnpm clean:backend && pnpm clean:frontend",
    "clean:contract": "cd contracts && forge clean",
    "clean:circuits": "cd circuits && make clean",
    "clean:backend": "pnpm --filter backend clean",
    "clean:frontend": "pnpm --filter frontend clean",
    "lint": "pnpm --filter frontend lint && pnpm --filter backend lint",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "type-check": "pnpm --filter frontend type-check && pnpm --filter backend type-check",
    "deps:check": "pnpm outdated",
    "deps:update": "pnpm update --latest",
    "deps:audit": "pnpm audit --fix",
    "deps:clean": "rm -rf node_modules pnpm-lock.yaml && pnpm install"
  },
  "dependencies": {
    "@ethersproject/keccak256": "^5.8.0",
    "@helia/json": "^4.0.6",
    "@helia/remote-pinning": "^2.0.3",
    "@helia/strings": "^4.0.6",
    "@helia/verified-fetch": "^3.1.1",
    "@reclaimprotocol/circom-symmetric-crypto": "^1.1.3",
    "@uniswap/permit2-sdk": "^1.3.1",
    "assert": "^2.1.0",
    "body-parser": "^2.2.0",
    "chalk": "^5.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "ethereumjs-util": "^7.1.5",
    "ethers": "^6.14.4",
    "exec-promise": "^0.7.0",
    "express": "^5.1.0",
    "helia": "^5.4.2",
    "multiformats": "^13.3.7",
    "path": "^0.12.7",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "snarkjs": "^0.7.5",
    "url": "^0.11.4",
    "web3": "^4.16.0",
    "web3-utils": "^4.3.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitejs/plugin-react": "^4.5.2",
    "concurrently": "^9.1.2",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "glob": "^11.0.3",
    "globals": "^16.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "packageManager": "pnpm@9.15.1",
  "pnpm": {
    "overrides": {
      "glob": "^10.3.10",
      "rimraf": "^5.0.5"
    }
  }
}
