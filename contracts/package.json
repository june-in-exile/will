{
  "name": "contracts",
  "type": "module",
  "devDependencies": {
    "@typechain/ethers-v6": "^0.5.1",
    "ethers": "^6.14.3",
    "lint-staged": "^15.5.2",
    "typechain": "^8.3.2"
  },
  "scripts": {
    "install": "make install",
    "typechain": "make typechain",
    "build": "make build",
