{
  "name": "contracts",
  "devDependencies": {
    "@typechain/ethers-v6": "^0.5.1",
    "ethers": "^6.14.3",
    "lint-staged": "^15.5.2",
    "typechain": "^8.3.2"
  },
  "scripts": {
    "install": "make install",
    "typechain": "pnpm exec typechain --target ethers-v6 --out-dir ../shared/typechain-types 'out/**/*.sol/*.json'",
    "build": "make build",
    "test": "make test",
    "clean": "make clean"
  },
  "lint-staged": {
    "*.sol": [
      "forge fmt"
    ],
    "*.{js,json}": [
      "prettier --write"
    ]
  }
}
